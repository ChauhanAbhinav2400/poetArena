{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/contact-us/page.tsx",
    "app/poets/page.jsx",
    "app/problem/page.jsx",
    "next-env.d.ts",
    "out/types/**/*.ts",
    "app/poetry/page.jsx",
    "app/poetry/components/AddProblemModal.jsx",
    "app/poetry/components/FilterBar.jsx",
    "app/poetry/components/PoetryPage.jsx",
    "app/poetry/components/ProblemCard.jsx",
    "app/poets/components/PoetsPage.jsx",
    "components/home/TopPoets.jsx",
    "components/home/TrendingShayaris.jsx",
    "app/auth/set-password/page.jsx"
  ],
  "exclude": ["node_modules"]
}
